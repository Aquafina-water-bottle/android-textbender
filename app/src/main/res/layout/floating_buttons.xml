<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_buttons_background"
    android:orientation="vertical">

  <com.google.android.material.button.MaterialButton
      android:id="@+id/overlay"
      style="@style/Widget.Material3.Button.IconButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@string/qs_activate_overlay"
      app:icon="@drawable/layers_24dp" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/clipboard"
      style="@style/Widget.Material3.Button.IconButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@string/qs_bend_clipboard"
      app:icon="@drawable/content_paste_go_24dp" />

</LinearLayout>
